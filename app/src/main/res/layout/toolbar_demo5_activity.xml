<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="Toolbar Demo1"
        app:titleTextColor="@android:color/holo_blue_dark"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
        app:logo="@drawable/ic_android"
        app:subtitle="Toolbar subtitle"
        app:subtitleTextColor="@android:color/holo_green_light"
        app:subtitleTextAppearance="@style/ToolbarSubtitleTextAppearance"
        style="@style/Widget.MaterialComponents.Toolbar.Primary" />

    <TextView
        android:padding="16dp"
        android:id="@+id/tv"
        android:text="添加了 app:titleTextColor 设置标题颜色，app:titleTextAppearance 设置标题文字样式（大小，风格，大小写），app:subTitleTextColor 设置副标题颜色，app:subTitleTextAppearance 设置副标题文字样式（大小，风格，大小写）"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>