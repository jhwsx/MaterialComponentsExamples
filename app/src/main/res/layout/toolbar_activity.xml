        <!--            app:titleTextColor="@android:color/holo_blue_dark" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="6, 演示：修改 navigationIcon 和 title 之间距离过大的问题。"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_toolbar6"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="4dp"
            android:background="@color/colorPrimary"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:logo="@drawable/ic_android"
            app:navigationIcon="@drawable/ic_back_circle"
            app:subtitle="Toolbar subtitle"
            app:subtitleTextColor="@android:color/holo_green_light"
            app:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:title="Toolbar Demo"
            app:titleMargin="0dp" />
    </LinearLayout>
</ScrollView>
