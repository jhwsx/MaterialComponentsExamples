<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="1, 演示：开启默认的返回箭头；显示默认的标题，副标题。"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
        <!--app:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar" 使得返回箭头变为白色-->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:logo="@drawable/ic_android"
            app:subtitle="Toolbar subtitle"
            app:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="2, 演示：修改默认的返回箭头颜色"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:logo="@drawable/ic_android"
            app:subtitle="Toolbar subtitle"
            app:theme="@style/ToolbarTheme" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="3, 演示：修改默认的返回箭头；修改默认的标题，副标题文字样式。"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="4dp"
            android:background="@color/colorPrimary"
            app:logo="@drawable/ic_android"
            app:navigationIcon="@drawable/ic_back_circle"
            app:subtitle="Toolbar subtitle"
            app:subtitleTextAppearance="@style/ToolbarSubtitleTextAppearance"
            app:subtitleTextColor="@android:color/holo_green_light"
            app:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:title="Toolbar Demo"
            app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
            app:titleTextColor="@android:color/holo_blue_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="4, 演示：添加 app:menu, 同样会走 getMenuInflater().inflate(resId, getMenu());"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_toolbar3"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="4dp"
            android:background="@color/colorPrimary"
            app:logo="@drawable/ic_android"
            app:menu="@menu/toolbar_menu"
            app:navigationIcon="@drawable/ic_back_circle"
            app:subtitle="Toolbar subtitle"
            app:subtitleTextAppearance="@style/ToolbarSubtitleTextAppearance"
            app:subtitleTextColor="@android:color/holo_green_light"
            app:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:title="Toolbar Demo"
            app:titleMargin="8dp"
            app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
            app:titleTextColor="@android:color/holo_blue_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="5, 演示：添加 app:popupTheme, 解决 3 中弹出菜单看不到内容的问题。"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_toolbar4"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="4dp"
            android:background="@color/colorPrimary"
            app:logo="@drawable/ic_android"
            app:menu="@menu/toolbar_menu"
            app:navigationIcon="@drawable/ic_back_circle"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
            app:subtitle="Toolbar subtitle"
            app:subtitleTextAppearance="@style/ToolbarSubtitleTextAppearance"
            app:subtitleTextColor="@android:color/holo_green_light"
            app:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:title="Toolbar Demo"
            app:titleMargin="8dp"
            app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
            app:titleTextColor="@android:color/holo_blue_dark" />
