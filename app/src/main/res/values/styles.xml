<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="AppTheme.OverflowMenu">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow.My</item>
    </style>

    <style name="AppTheme.TranslucentStatus">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ToolbarSubtitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textStyle">italic</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.Toolbar.Color" parent="">
        <item name="colorControlNormal">@android:color/darker_gray</item>
    </style>


    <style name="Widget.MaterialComponents.PopupMenu.Overflow.My">
        <!--水平方向的偏移-->
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <!--竖直方向的偏移-->
        <item name="android:dropDownVerticalOffset">8dip</item>
        <!--是否覆盖锚点位置-->
        <item name="android:overlapAnchor">false</item>
        <!--设置弹出菜单的背景-->
        <item name="android:popupBackground">@drawable/popup_background</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>